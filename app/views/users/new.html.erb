<h1>Users</h1>
<p>Fill in the form below to become a new user!</p>


<%= form_for @user do |f| %>
  <p><%= "Name" %></p>
  <p><%= f.text_field :name, :autofocus => true %></p>
  <p><%= "Email" %></p>
  <p><%= f.text_field :email %></p>
  <p><%= "Password" %></p>
  <p><%= f.text_field :password %></p>
  <p><%= "Password Confirmation" %></p>
  <p><%= f.text_field :password_confirmation %></p>
  <p><%= f.submit "Create" %></p>
<% end %>





